@model Lab6.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <div class="card border-danger shadow-sm fade-in">
            <div class="card-header bg-danger text-white fw-bold">
                Delete Student
            </div>

            <div class="card-body p-4">

                <div class="alert alert-warning text-center">
                    ⚠️ Are you sure you want to delete this student?
                </div>

                <dl class="row mb-4">
                    <dt class="col-sm-4 fw-semibold">Full Name</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4 fw-semibold">Student Number</dt>
                    <dd class="col-sm-8">@Model.StudentNumber</dd>

                    <dt class="col-sm-4 fw-semibold">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4 fw-semibold">Program</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info text-dark">
                            @Model.Program
                        </span>
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            ← Cancel
                        </a>

                        <button type="submit" class="btn btn-danger px-4">
                            Delete
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>
